{
  "name": "nerve",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:logger": "turbo build --filter=@repo/logger",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "format": "turbo run format -- --write",
    "format:check": "turbo run format -- --check",
    "check-types": "turbo run check-types",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "infra:up": "cd infra/docker/clickhouse && docker compose up -d",
    "infra:down": "cd infra/docker/clickhouse && docker compose down",
    "infra:logs": "cd infra/docker/clickhouse && docker compose logs -f clickhouse",
    "infra:reset": "cd infra/docker/clickhouse && docker compose down -v && docker-compose up -d",
    "db:health": "curl -f http://localhost:8123/ping || exit 1"
  },
  "devDependencies": {
    "husky": "^8.0.0",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "apps/**/*.{js,jsx,ts,tsx}": [
      "turbo run lint --filter='./apps/*' --",
      "prettier --write"
    ],
    "packages/**/*.{js,jsx,ts,tsx}": [
      "turbo run lint --filter='./packages/*' --",
      "prettier --write"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ]
  }
}
