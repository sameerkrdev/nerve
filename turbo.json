{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "^db:generate"],
      "outputs": ["dist/**"],
      "env": ["POSTGRES_DATABASE_URL", "CLICKHOUSE_URL"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build", "^db:generate"]
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "format": {
      "dependsOn": ["^build"]
    },
    "check-types": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "proto-gen:all": {
      "outputs": ["ts/generated/**", "go/generated/**"]
    },
    "clean": {
      "cache": false,
      "outputs": []
    },
    "infra:up": {
      "outputs": []
    },
    "db:generate": {
      "cache": false
    },
    "db:migrate": {
      "cache": false,
      "persistent": true
    },
    "db:deploy": {
      "cache": false
    }
  }
}
