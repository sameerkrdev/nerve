model Trade {
    id String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid

    // Trade details
    symbol         String
    price          Int
    quantity       Int
    trade_sequence Int

    sell_orde     Order?  @relation(fields: [sell_order_id], references: [id])
    sell_order_id String? @db.Uuid

    buy_order    Order?  @relation(fields: [buy_order_id], references: [id])
    buy_order_id String? @db.Uuid

    user    User?   @relation(fields: [user_id], references: [id])
    user_id String? @db.Uuid

    @@map("trades")
}
